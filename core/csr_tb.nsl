#include "csr.nh"

declare csr_tb simulation {}

module csr_tb
{
    control_state_registers csr;
    reg counter[10] = 0;
    counter++;

    func csr.error
    {
        _finish("error occured");
    }

    if(counter == 10'h5)
    {
        _display("mhartid 0x%x", csr.read(0xf14));
    }

    if(counter == 10'h6)
    {
    }

    if(counter == 10'h100)
    {
        _finish();
    }
}
