#include "fetch.nh"

module fetch
{
    state_name idle, waiting;

    state idle
    {
        if(request)
        {
            request_to_bus(next_pc);
            goto waiting;
        }

        if(enable)
        {
            error(ERROR_FETCH);
        }
    }

    state waiting
    {
        if(enable)
        {
            done(data);
            if(request)
            {
                request_to_bus(next_pc);
            }
            else {
                goto idle;
            }
        }
        else
        {
            if(request)
            {
                error(ERROR_FETCH);
            }
        }
    }
}

